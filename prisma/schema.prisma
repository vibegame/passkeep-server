generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  // Default fields
  id           String    @id @default(uuid())
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  // General fields
  username     String    @unique
  email        String    @unique
  hashPassword String
  clues        Clue[]
  sessions     Session[]
}

model Clue {
  // Default fields
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  fields    Field[]
}

model Field {
  // Default fields
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // General fields
  name      String
  value     String
  // Relatives
  clue      Clue     @relation(fields: [clueId], references: [id], onDelete: Cascade)
  clueId    String
}

model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresIn DateTime
}
